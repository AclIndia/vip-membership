generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model RenwalOption {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  memberName String   @unique
  gstin      String   @unique
  plan       String
  price      Float
  createdAt  DateTime @default(now())
}

model Member {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  companyName      String   @unique
  email            String   @unique
  gstin            String   @unique
  membershipExpiry String @default("31st March 2025")
  name             String
  totalOrders      Float
  totalSavings     Float
  createdAt        DateTime @default(now())
}
